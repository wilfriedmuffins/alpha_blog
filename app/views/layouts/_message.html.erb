<div class="container">
  <% flash.each do |key, msg| %>
    <div class ="alert alert-<%=key%>" role="alert">
      <a href="#" class="close" data-dismiss="alert">&#215;</a>
      <!-- permet de rajouter une div html avec un id et le msg du flash -->
       <%= content_tag :div, msg, :id =>"flash-{#key}" if msg.is_a?(String) %>
    </div>
  <% end %>
</div> 
